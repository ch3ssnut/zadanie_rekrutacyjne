{% extends 'base.html.twig' %}

{% block title %}Zadanie rekrutacyjne{% endblock %}

{% block body %}
<style>
    
</style>



<div class="container">

    <div class="d-flex">
        
        {{ form_start(form, {'attr': {'class': 'col-3 mx-2 mt-4 py-3 px-4 border form'}}) }}
            {{ form_label(form.sort_by, 'Sort by:', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.sort_by, {'attr': {'class': 'form-control'}}) }}
            {{ form_widget(form.filter, {'attr': {'class': 'mt-3 btn btn-primary'}}) }}
        {{ form_end(form) }}

        {{ form_start(searchForm, {'attr': {'class': 'col-3 mx-2 mt-4 py-3 px-4 border form'}}) }}
            {{ form_label(searchForm.find_by, 'Find by:', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(searchForm.find_by, {'attr': {'class': 'form-control'}}) }}
            {{ form_widget(searchForm.Search, {'attr': {'class': 'mt-3 btn btn-primary'}}) }}
        {{ form_end(searchForm) }}
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ref</th>
                <th scope="col">Client name</th>
                <th scope="col">Registration date</th>
                <th scope="col">Symbol</th>
                <th scope="col">Send date</th>
                <th scope="col">Invoiced</th>
            </tr>
        </thead>
        <tbody>
            {% for row in data %}
                <tr>
                    <td>{{row.ref}}</td>
                    <td>{{row.client_name}}</td>
                    <td>{{row.regdate}}</td>
                    <td>{{row.symbol}}</td>
                    <td>{{row.send_date}}</td>
                    <td>{{ row.invoiced ? 'Yes' : 'No' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}